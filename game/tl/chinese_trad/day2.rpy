# game/day2.rpy:1509
translate chinese_trad day2_road_home_sima_36ec96cc:

    # s "I look forward to seeing you tomorrow!"
    s "忍不住明天再見你！"

# game/day2.rpy:1510
translate chinese_trad day2_road_home_sima_e4699dfc:

