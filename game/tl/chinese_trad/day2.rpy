# game/day2.rpy:1505
translate chinese_trad day2_road_home_sima_7988a01b:

    # p "I do."
    p "是的。"

# game/day2.rpy:1507
translate chinese_trad day2_road_home_sima_5f31e9fb:

    # s "Well, time will show if it's true..."
