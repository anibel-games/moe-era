    m "からかってるだけよ"

# game/day1.rpy:2276
translate japanese street_marta_f215c5fd:

    # m "\"It's not like I want you to invite me...\""
    m "\「別に誘って欲しいからじゃなくて…\」"

# game/day1.rpy:2278
